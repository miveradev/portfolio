---
import Hero from "./Hero.astro";
import Card from "./Card.astro";
import Pic from "./Pic.astro";
---
<div class="header">
    <Hero></Hero>
    <Pic></Pic>
</div>
<div id="projects">
    <div class="content">
        <Card
            title={'Scorevo'}
            description={"Customizable Football Scoreboard for live events, specially designed for Twitch streamers"}
            img="/scorevo.jpg"
            link_repo="https://www.github.com/miveradev/scorevo"
            link_view="https://scorevo-mivera.web.app/"
            color="#CD6767"
            tech={["React", "Typescript"]}>
        </Card>
        <Card
            title={'Marvel Reading Order Tracker'}
            description={"Comic tracker following Marvel Master Reading Order"}
            img="/comic-journey.jpg"
            link_repo="https://www.github.com/miveradev/comic-journey"
            link_view="https://comic-journey.netlify.app/"
            color="#6F8860"
            tech={["Astro", "TailwindCSS", "Supabase"]}>
        </Card>
    </div>
</div>

<style>

    .header {
        display: grid;
        grid-template-columns: 1fr auto;
        grid-template-rows: 1fr;
        gap: 30px;
        height: 470px;
    }

    .content {
        margin-top: 36px;
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(500px, 1fr));
        gap: 30px;
    }


    @media (max-width:1800px) {
        .header {
            gap: 30px;
            height: 300px;
        }
    }

    @media (max-width:768px) {
        .header {
            display: flex;
            flex-direction: column-reverse;
            gap: 20px;
            height: 600px;
        }

        .content {
            margin-top: 20px;
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 30px;
        }
    }

    @media (max-width:425px) {
        .content {
            margin-top: 20px;
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
            gap: 30px;
        }
    }

</style>