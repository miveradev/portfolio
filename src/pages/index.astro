---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Content from '../components/Content.astro';

const currentYear = new Date().getFullYear();
---

<Layout title="Miquel Vera">
	<main>
		<Header></Header>
		<Content></Content>
		<footer>
			<p>Miquel Vera - {currentYear}</p>
		</footer>
	</main>
</Layout>

<style>
	main {
		margin: 0px 21%;
	}

	footer {
		margin: 2rem;
		color: var(--black);
		font-size: 14px;
		font-weight: 400;
	}
</style>